<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <TextView
            android:id="@+id/screen"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/black"
            android:gravity="right|bottom"
            android:text=""
            android:textColor="#fff"
            android:textSize="50sp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:id="@+id/btnClear"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#e9e8e8"
                    android:gravity="center"
                    android:text="C"
                    android:onClick="clearAll"
                    android:textColor="#000"
                    android:textSize="40sp"
                    android:layout_marginRight="1dp">

                </TextView>
                <TextView
                    android:id="@+id/btnYinYang"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#e9e8e8"
                    android:gravity="center"
                    android:text="+/-"
                    android:textColor="#000"
                    android:textSize="40sp"
                    android:layout_marginRight="1dp">

                </TextView>
                <TextView
                    android:id="@+id/btnPercent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#e9e8e8"
                    android:gravity="center"
                    android:text="%"
                    android:onClick="operatorClick"
                    android:textColor="#000"
                    android:textSize="40sp"
                    android:layout_marginRight="1dp">

                </TextView>
                <TextView
                    android:id="@+id/btnQuotient"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ef8904"
                    android:gravity="center"
                    android:text="/"
                    android:onClick="operatorClick"
                    android:textColor="#fff"
                    android:textSize="40sp"
                    android:layout_marginRight="1dp">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:id="@+id/num7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="#e9e8e8"
                    android:gravity="center"
                    android:onClick="numberClick"
                    android:text="7"
                    android:textColor="#000"
                    android:textSize="40sp">

                </TextView>

                <TextView
                    android:id="@+id/num8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="#e9e8e8"
                    android:gravity="center"
                    android:text="8"
                    android:onClick="numberClick"
                    android:textColor="#000"
                    android:textSize="40sp">

                </TextView>
                <TextView
                    android:id="@+id/num9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#e9e8e8"
                    android:gravity="center"
                    android:text="9"
                    android:onClick="numberClick"
                    android:textColor="#000"
                    android:textSize="40sp"
                    android:layout_marginRight="1dp">

                </TextView>
                <TextView
                    android:id="@+id/btnProd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ef8904"
                    android:gravity="center"
                    android:text="X"
                    android:onClick="operatorClick"
                    android:textColor="#fff"
                    android:textSize="40sp"
                    android:layout_marginRight="1dp">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:id="@+id/num4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#e9e8e8"
                    android:gravity="center"
                    android:text="4"
                    android:onClick="numberClick"
                    android:textColor="#000"
                    android:textSize="40sp"
                    android:layout_marginRight="1dp">

                </TextView>
                <TextView
                    android:id="@+id/num5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#e9e8e8"
                    android:gravity="center"
                    android:text="5"
                    android:onClick="numberClick"
                    android:textColor="#000"
                    android:textSize="40sp"
                    android:layout_marginRight="1dp">

                </TextView>
                <TextView
                    android:id="@+id/num6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#e9e8e8"
                    android:gravity="center"
                    android:text="6"
                    android:onClick="numberClick"
                    android:textColor="#000"
                    android:textSize="40sp"
                    android:layout_marginRight="1dp">

                </TextView>
                <TextView
                    android:id="@+id/btnDiffer"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ef8904"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="#fff"
                    android:textSize="40sp"
                    android:layout_marginRight="1dp">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:id="@+id/num1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="#e9e8e8"
                    android:gravity="center"
                    android:onClick="numberClick"
                    android:text="1"
                    android:textColor="#000"
                    android:textSize="40sp">

                </TextView>
                <TextView
                    android:id="@+id/num2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#e9e8e8"
                    android:gravity="center"
                    android:text="2"
                    android:onClick="numberClick"
                    android:textColor="#000"
                    android:textSize="40sp"
                    android:layout_marginRight="1dp">

                </TextView>
                <TextView
                    android:id="@+id/num3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#e9e8e8"
                    android:gravity="center"
                    android:text="3"
                    android:onClick="numberClick"
                    android:textColor="#000"
                    android:textSize="40sp"
                    android:layout_marginRight="1dp">

                </TextView>
                <TextView
                    android:id="@+id/btnSum"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ef8904"
                    android:gravity="center"
                    android:text="+"
                    android:onClick="operatorClick"
                    android:textColor="#fff"
                    android:textSize="40sp"
                    android:layout_marginRight="1dp">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">
                <TextView
                    android:id="@+id/num0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#e9e8e8"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#000"
                    android:textSize="40sp"
                    android:layout_marginRight="1dp">

                </TextView>
                <TextView
                    android:id="@+id/btnDot"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#e9e8e8"
                    android:gravity="center"
                    android:text="."
                    android:textColor="#000"
                    android:textSize="40sp"
                    android:layout_marginRight="1dp">

                </TextView>

                <TextView
                    android:id="@+id/btnResult"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="#ef8904"
                    android:gravity="center"
                    android:text="="
                    android:onClick="resultClick"
                    android:textColor="#fff"
                    android:textSize="40sp">

                </TextView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>






